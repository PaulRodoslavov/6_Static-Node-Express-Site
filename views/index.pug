extends layout.pug

block content
   article.grid-container.portfolio-intro
      div
         h1 Let's make the web great together!

         p.lead.text-light
           | Here are a few examples of my work.
   article.grid-container.portfolio-index

      .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3


         each val in projects
            .cell
               a(href=`/project/${val.id}` target='_blank')
                  img.thumbnail(src=`static/${val.image_urls[0]}`)
                  h5= val.project_name
                  
